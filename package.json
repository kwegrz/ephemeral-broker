{
  "name": "ephemeral-broker",
  "version": "0.0.1",
  "description": "Fast, secure, ephemeral IPC over pipes. Share secrets, tokens, and small state between parallel processes without touching disk or opening ports.",
  "type": "module",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "keywords": [
    "ipc",
    "pipe",
    "ephemeral",
    "secrets",
    "tokens",
    "kv-store",
    "lease",
    "named-pipes",
    "unix-socket",
    "testing",
    "parallel",
    "wdio",
    "playwright",
    "jest"
  ],
  "author": "ephemeral-broker contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kwegrz/ephemeral-broker.git"
  },
  "bugs": {
    "url": "https://github.com/kwegrz/ephemeral-broker/issues"
  },
  "homepage": "https://github.com/kwegrz/ephemeral-broker#readme",
  "files": [
    "src/",
    "README.md",
    "LICENSE",
    "ARCHITECTURE.md",
    "SECURITY.md"
  ],
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "default": "./src/index.js"
    },
    "./broker": {
      "types": "./src/broker.d.ts",
      "default": "./src/broker.js"
    },
    "./client": {
      "types": "./src/client.d.ts",
      "default": "./src/client.js"
    }
  },
  "scripts": {
    "test": "node --test test/*.test.js",
    "test:watch": "node --test --watch test/*.test.js",
    "coverage": "c8 --reporter=lcov --reporter=text node --test test/*.test.js",
    "lint": "eslint src test",
    "lint:fix": "eslint src test --fix",
    "format": "prettier --write \"src/**/*.{js,json,md}\" \"test/**/*.{js,json,md}\" \"*.{js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,json,md}\" \"test/**/*.{js,json,md}\" \"*.{js,json,md}\"",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "eslint": "^9.36.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
